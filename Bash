#№1
var1=$1
var2=$2
echo "Arguments are: \$1=$var1 \$2=$var2"

#№2
if [[ $var -gt 5 ]]
then
  echo "one" 
elif [[ $var -lt 3 ]]
then
  echo "two"
elif [[ $var -eq 4 ]]
then
  echo "three"
else
  echo "four"
fi

#№3
if [[ $1 -eq 0 ]]
then
    echo "No students"
elif [[ $1 -eq 1 ]]
then
    echo "1 student"
elif [[ $1 -ge 5 ]]
then
    echo "A lot of students"
else
    echo "$1 students"
fi

#№4
for str in a , b , c_d
do
  echo "start"  
  if [[ $str > "c" ]]
  then
    continue
  fi
  echo "finish"
done

#№5
while [[ 1 ]]
do
    echo 'enter your name:'
    read name
    if [[ -z $name ]]
    then
        break
    fi
    echo 'enter your age:'
    read age
    if [[ age -eq 0  ]]
    then
        break
    fi

    if [[ $age -le  16 ]]
    then
        group=child

    elif [[ $age -gt 25 ]]
    then
        group=adult

    else
        group=youth
    fi
    echo "$name, your group is $group"
done
echo 'bye'

#№6
#!/bin/bash

echo -n "Enter your name: "
read user_name

if [ -n "$user_name" ]; then
    echo "Hello $user_name!"
    exit 0
else
    echo "You dont enter your name!"
    exit 1
fi

#№7
function show_usage {
   echo "Использование: $0 source_dir dest_dir"
   exit 1
}
# Основная программа начинается здесь

if [ $# -ne 2 ]; then
     show_usage
else # Существуют два агумента
    if [ -d $1 ]; then
        source_dir=$1
    else
        echo 'Недопустимый каталог-источник'
        show_usage
    fi
    if [ -d $2 ]; then
        dest_dir=$2
    else
        echo 'Недопустимый катало-приемник'
        show_usage
    fi
fi

printf "Каталог-источник: ${source_dir}\n"
printf "Каталог-приемник: ${dest_dir}\n"

#№8
function localizer {
   echo "==> В функции localizer начальное значение a равно '$a' "
   local a
   echo "==> После объявления local значение a стало равным '$a' "
   a="localizer version"
   echo "==> При выходе из функции localizer значение a равно '$a' "
}

a="test"
echo "До вызова функции localizer значение a равно '$a' "
localizer
echo "После вызова функции localizer значение a равно '$a' "
